pipeline {
    agent {
        docker {
            image 'node:lts-buster-slim' 
            args '-p 3000:3000' 
        }
    }
     environment {
        CI = 'true'
    }
    stages {
        stage('Build') { 
            steps {
                sh 'npm config set proxy "http://your-proxy.com:80"'
                sh 'npm config set registry http://registry.npmjs.org/'
                sh 'npm install' 
                
                
            }
        }
        stage('Test') { 
            steps {
                sh 'pip install --upgrade pip'
                sh 'pip install numpy'
                sh 'pip install pytest'
                sh 'pytest reacttest.py' 
            }
        }  
        
        
        
    }       
}