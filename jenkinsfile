pipeline {
    agent {
        docker {
            image 'node:lts-buster-slim' 
            args '-p 3000:3000' 
        }
    }
     environment {
        CI = 'true'
    }
    stages {
        stage('Build') { 
            steps {
                sh 'npm config set proxy "http://your-proxy.com:80"'
                sh 'npm config set registry http://registry.npmjs.org/'
                sh 'npm install' 
                
                
            }
        }
        stage('Test') { 
            agent {
          docker {
               image 'qnib/pytest'
          }
     }
            steps {
                sh 'virtualenv venv && . venv/bin/activate && pip install -r requirements.txt && python reacttest.py'
     }
        }  
        
        
        
    }       
}