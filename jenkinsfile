pipeline {
    agent any
    /* {
        docker {
            images { 'node:lts-buster-slim' 

                        
            args '-p 3000:3000' 
        }
    }*/
     environment {
        CI = 'true'
    }
    stages {
        stage('Build') { 
            agent{
                docker {
                    image 'node:lts-buster-slim'
                }
            }
            steps {
                sh 'npm config set registry http://registry.npmjs.org/'
                sh 'npm install -d'
                sh 'npm run build'
                
            }
        }
        stage('Test') {
            agent{
                docker {
                    image 'python'
                }
            }
            steps {
                sh 'python3 -m venv env'
                sh 'source ./env/bin/activate'
                sh 'python -m pip install -U selenium'
                sh 'python reacttest.py'
            }
        }  
        
        
        
    }       
}
