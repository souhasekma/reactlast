pipeline {
    agent any
    /* {
        docker {
            images { 'node:lts-buster-slim' 

                        
            args '-p 3000:3000' 
        }
    }*/
     environment {
        CI = 'true'
    }
    stages {
        stage('Build') { 
            agent{
                docker {
                    image 'node:lts-buster-slim'
                }
            }
            steps {
                sh 'npm config set registry https://registry.npmjs.org/'
                sh 'npm  cache clear --force'
                
            }
        }
        stage('Test') {
            agent{
                docker {
                    image 'python'
                }
            }
            steps {
                sh 'pip install virtualenv --user'
                sh 'virtualenv enviroment_name -p python3'
                sh 'source enviroment_name/bin/activate'
                sh 'pip install selenium'
                sh 'python reacttest.py'
            }
        }  
        
        
        
    }       
}